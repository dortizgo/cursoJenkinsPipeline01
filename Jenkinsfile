// Declarativa: Es m치s c칩moda... m치s guiada... menos flexible
pipeline {
    
    agent any;
    
    stages {
        stage('Compilaci칩n') {
            steps {
                echo 'Voy a compilar...'
                echo 'Estoy en ello...'
                echo 'Listo'
            }
            post {
                success {
                    echo 'Se ejecuta solo si los steps han ido bien'
                }
                failure {
                    echo 'Se ejecuta solo si los steps han ido mal'
                }
                always {
                    echo 'Se ejecuta en cualquier caso'
                }
            }
        }
        stage('Pruebas') {
            steps {
                echo 'Voy a compilar...'
                echo 'Estoy en ello...'
                echo 'Listo'
            }
            post {
                success {
                    echo 'Se ejecuta solo si los steps han ido bien'
                }
                failure {
                    echo 'Se ejecuta solo si los steps han ido mal'
                }
                always {
                    echo 'Se ejecuta en cualquier caso'
                }
            }
        }
    }
    
    // Parte posterior
    
    post {
                success {
                    echo 'Se ejecuta solo si los steps han ido bien'
                }
                failure {
                    echo 'Se ejecuta solo si los steps han ido mal'
                }
                
}